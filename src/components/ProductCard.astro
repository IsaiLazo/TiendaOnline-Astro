---
interface Props {
  product: {
    id: number;
    name: string;
    price: number;
    imageUrl: string;
  };
}

const { product } = Astro.props;
---

<div class="max-w-sm mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl m-4">
  <div class="md:flex">
    <div class="md:flex-shrink-0">
      <img class="h-48 w-full object-cover md:w-48" src={product.imageUrl} alt={product.name}>
    </div>
    <div class="p-8">
      <div class="uppercase tracking-wide text-sm text-indigo-500 font-semibold">{product.name}</div>
      <p class="mt-2 text-gray-500">${product.price.toFixed(2)}</p>
    </div>
  </div>
  <button class="block w-full bg-blue-500 text-white py-2 px-4 hover:bg-blue-600 transition duration-300">
    Add to Cart
  </button>
</div>

